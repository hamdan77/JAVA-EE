<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<display-name>BeverageStoreUI</display-name>

	<!-- Servlets -->

	<!-- JSPs -->
	<servlet>
		<servlet-name>Main</servlet-name>
		<jsp-file>main.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>Main</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
		<!-- JSPs -->
	<servlet>
		<servlet-name>beverageCreation</servlet-name>
		
		<jsp-file>beverageCreation.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>beverageCreation</servlet-name>
		<url-pattern>/beverageCreation</url-pattern>
	</servlet-mapping>

<servlet>
		<servlet-name>beverageManager</servlet-name>
		
		<jsp-file>beverageManager.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>beverageManager</servlet-name>
		<url-pattern>/beverageManager</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Edit</servlet-name>
		<servlet-class>de.uniba.dsg.dsam.client.EditServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Edit</servlet-name>
		<url-pattern>/frontend/editBeverage</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Assign</servlet-name>
		<servlet-class>de.uniba.dsg.dsam.client.AssignIncentiveServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Assign</servlet-name>
		<url-pattern>/frontend/AssignIncentive</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>incentiveCreation</servlet-name>
		
		<jsp-file>incentiveCreation.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>incentiveCreation</servlet-name>
		<url-pattern>/incentiveCreation</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>viewOrders</servlet-name>
		
		<jsp-file>viewOrders.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>viewOrders</servlet-name>
		<url-pattern>/ViewOrders</url-pattern>
	</servlet-mapping>
	
</web-app>
